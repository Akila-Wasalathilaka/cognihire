# Database Configuration
ORACLE_USER=cognihire
ORACLE_PASSWORD=password
ORACLE_CONNECT_STRING=localhost:1521/XE

# Oracle Connection Pool
ORACLE_POOL_MIN=2
ORACLE_POOL_MAX=10
ORACLE_POOL_INCREMENT=1
ORACLE_POOL_PING_INTERVAL=60
ORACLE_POOL_TIMEOUT=60

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info

# Next.js Configuration
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Object Storage (optional - for file uploads)
OCI_ACCESS_KEY_ID=your-oci-access-key
OCI_SECRET_ACCESS_KEY=your-oci-secret-key
OCI_REGION=us-ashburn-1
OCI_BUCKET_NAME=cognihire-bucket

# Redis Configuration (optional - for caching and queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
BCRYPT_ROUNDS=12
