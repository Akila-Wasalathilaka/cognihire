# Production Environment Configuration for CogniHire Backend
# Copy this to .env in your backend directory

# Database Configuration
DATABASE_URL=sqlite:///./prod.db

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-really-do-it
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Application Settings
DEBUG=False
ENVIRONMENT=production

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
SESSION_SECRET=another-super-secret-key-for-sessions

# Optional: Oracle Database Configuration (uncomment if using Oracle)
# DATABASE_URL=oracle+cx_oracle://username:password@host:port/service_name
# ORACLE_HOST=your-oracle-host
# ORACLE_PORT=1521
# ORACLE_SERVICE_NAME=your-service-name
# ORACLE_USERNAME=your-username
# ORACLE_PASSWORD=your-password