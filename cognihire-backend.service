[Unit]
Description=CogniHire FastAPI Backend
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/cognihire/backend
Environment=PATH=/home/ubuntu/cognihire/backend/venv/bin
ExecStart=/home/ubuntu/cognihire/backend/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target